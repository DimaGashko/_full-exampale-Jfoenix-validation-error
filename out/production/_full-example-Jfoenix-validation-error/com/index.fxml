<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@styles/index.css, @styles/scroll.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Index">
    <HBox alignment="CENTER" spacing="40.0">
        <VBox styleClass="group, noError">
            <Label styleClass="group__title" text="No Error" />

            <JFXTextField fx:id="fxNoError__field1" labelFloat="true" styleClass="group__field, noError__field" promptText="Text Filed 1" />
            <JFXTextField fx:id="fxNoError__field2" labelFloat="true" styleClass="group__field, noError__field" promptText="Text Filed 2" />
            <JFXTextField fx:id="fxNoError__field3" labelFloat="true" styleClass="group__field, noError__field" promptText="Text Filed 3" />
            <JFXTextField fx:id="fxNoError__field4" labelFloat="true" styleClass="group__field, noError__field" promptText="Text Filed 4" />
            <JFXTextField fx:id="fxNoError__field5" labelFloat="true" styleClass="group__field, noError__field" promptText="Text Filed 5" />
            <JFXTextField fx:id="fxNoError__field6" labelFloat="true" styleClass="group__field, noError__field" promptText="Text Filed 6" />
        </VBox>
        <VBox styleClass="group, withError">
            <Label styleClass="group__title" text="With error" />

            <JFXTextField fx:id="fxError__field1" labelFloat="true" styleClass="group__field, withError__field" promptText="Text Filed 1" />
            <JFXTextField fx:id="fxError__field2" labelFloat="true" styleClass="group__field, withError__field" promptText="Text Filed 2" />
            <JFXTextField fx:id="fxError__field3" labelFloat="true" styleClass="group__field, withError__field" promptText="Text Filed 3" />
            <JFXTextField fx:id="fxError__field4" labelFloat="true" styleClass="group__field, withError__field" promptText="Text Filed 4" />
            <JFXTextField fx:id="fxError__field5" labelFloat="true" styleClass="group__field, withError__field" promptText="Text Filed 5" />
            <JFXTextField fx:id="fxError__field6" labelFloat="true" styleClass="group__field, withError__field" promptText="Text Filed 6" />
        </VBox>
        <VBox styleClass="group, fixed">
            <Label styleClass="group__title" text="Fixed" />

            <JFXTextField fx:id="fxFixed__field1" labelFloat="true" styleClass="group__field, fixed__field" promptText="Text Filed 1" />
            <JFXTextField fx:id="fxFixed__field2" labelFloat="true" styleClass="group__field, fixed__field" promptText="Text Filed 2" />
            <JFXTextField fx:id="fxFixed__field3" labelFloat="true" styleClass="group__field, fixed__field" promptText="Text Filed 3" />
            <JFXTextField fx:id="fxFixed__field4" labelFloat="true" styleClass="group__field, fixed__field" promptText="Text Filed 4" />
            <JFXTextField fx:id="fxFixed__field5" labelFloat="true" styleClass="group__field, fixed__field" promptText="Text Filed 5" />
            <JFXTextField fx:id="fxFixed__field6" labelFloat="true" styleClass="group__field, fixed__field" promptText="Text Filed 6" />
        </VBox>
      <padding>
         <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
      </padding>
    </HBox>
</ScrollPane>
